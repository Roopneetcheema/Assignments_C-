#include <iostream>
#include <climits>
using namespace std;
void sel_sort(int* arr,int len){
    int pos=0;
    for(int j=0;j<len-1;j++){
        int min=INT_MAX;
        for(int i=j;i<len;i++){
           if(arr[i]<min){
              min=arr[i];
              pos=i;
           }
        }
    int temp=arr[j];
    arr[j]=arr[pos];
    arr[pos]=temp;
    }
}
void sel_sort_both(int* arr, int len) {
    for (int j = 0, k = len - 1; j < k; j++, k--) {
        int pos = j, end = j;
        int min = arr[j];
        int max = arr[j];

        // Find min and max in current range [j â€¦ k]
        for (int i = j; i <= k; i++) {
            if (arr[i] < min) {
                min = arr[i];
                pos = i;
            }
            if (arr[i] > max) {
                max = arr[i];
                end = i;
            }
        }

        // Swap min with left boundary
        int temp = arr[j];
        arr[j] = arr[pos];
        arr[pos] = temp;

        // If max was at position j, after swap it's now at pos
        if (end == j) {
            end = pos;
        }

        // Swap max with right boundary
        temp = arr[k];
        arr[k] = arr[end];
        arr[end] = temp;
    }
}

void bub_sort(int* arr,int len){
    bool flag=true;
    for(int i=0;i<len-1;i++){
        for(int j=0;j<len-i-1;j++){
            
            if(arr[j]>arr[j+1]){
                flag=false;
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
           
            }
             if(flag){
                break;
        }
    }
}
void ins_sort(int* arr,int len){
    for(int i=0;i<=len-1;i++){
        int j=i;
        while(j>0 && arr[j-1]>arr[j]){
            int temp=arr[j];
            arr[j]=arr[j-1];
            arr[j-1]=temp;
            j--;
        }
    }    
}
int binarySearch(int arr[], int key, int low, int high) {
    while (low <= high) {
        int mid = low + (high - low) / 2;

        if (key == arr[mid])
            return mid + 1;   // insert after equal element (stable)
        else if (key > arr[mid])
            low = mid + 1;
        else
            high = mid - 1;
    }
    return low;  // correct position to insert
}

void binaryInsertionSort(int arr[], int n) {
    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int pos = binarySearch(arr, key, 0, i - 1);

        // shift elements to make space
        for (int j = i - 1; j >= pos; j--) {
            arr[j + 1] = arr[j];
        }
        arr[pos] = key;
    }
}


void show(int* arr,int len){
    for(int i=0;i<len;i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;
}
int main() {
    int arr[]={12,43,2,98,45,32,5,22};
    int arr2[]={2,4,6,7,9,10,12,13};
    int len= sizeof(arr)/sizeof(arr[0]);
    show(arr,len);
    sel_sort(arr,len);
    //ins_sort(arr2,len);
    show(arr2,len);
    ins_sort(arr,len);
    show(arr,len);
 
    return 0;
}
