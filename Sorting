#include <bits/stdc++.h>
using namespace std;

int partitionArray(vector<int> &A, int p, int r) {
    int x = A[r];      // pivot
    int i = p - 1;

    for (int j = p; j <= r - 1; ++j) {
        if (A[j] <= x) {
            i = i + 1;
            swap(A[i], A[j]);   // Exchange A[i] with A[j]
        }
    }
    swap(A[i + 1], A[r]);       // Exchange A[i + 1] with A[r]
    return i + 1;
}

void quicksort(vector<int> &A, int p, int r) {
    if (p < r) {
        int q = partitionArray(A, p, r);
        quicksort(A, p, q - 1);
        quicksort(A, q + 1, r);
    }
}

int main() {
    vector<int> A = {10, 7, 8, 9, 1, 5};
    int n = A.size();

    quicksort(A, 0, n - 1);

    cout << "Sorted array: ";
    for (int x : A) cout << x << " ";
    cout << endl;

    return 0;
}
